<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/payout_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <!-- Label for featured payout -->
    <TextView
        android:id="@+id/payout_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This Week"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:letterSpacing="0.05"
        android:layout_marginBottom="3dp" />

    <!-- Amount and Status Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/payout_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="$0.00 USD"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Status Icon Container with circular background -->
        <FrameLayout
            android:id="@+id/payout_status_container"
            android:layout_width="24dp"
            android:layout_height="24dp">

            <ImageView
                android:id="@+id/payout_status_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_status_payable" />

        </FrameLayout>

    </LinearLayout>

    <!-- Date -->
    <TextView
        android:id="@+id/payout_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Oct 16, 2023 12:00"
        android:textSize="11sp" />

</LinearLayout>
